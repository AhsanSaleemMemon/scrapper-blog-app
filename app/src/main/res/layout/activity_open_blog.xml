<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cornerRadius="http://schemas.android.com/apk/res-auto"
    tools:context=".BlogPage">
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/man" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/pic"
        android:fontFamily="@font/montserrat"
        android:text="Ahsan Saleem"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/uploadTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorName"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/pic"
        android:fontFamily="@font/montserrat"
        android:text="10th October,2021"
        android:textSize="11dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/downloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_cloud_download_24"
         />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pic"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Blog title here"
        android:textStyle="bold" />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="148dp"
    android:layout_margin="16dp"
    android:layout_below="@id/title"
    cornerRadius:cardCornerRadius="16dp"
    android:id="@+id/blogphotocard"

    >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/blogphoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
 />


</androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/blogphotocard"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:overScrollMode="always"

        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:fillViewport="true">


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:maxHeight="100dp"
            android:maxWidth="390dp"
            android:minLines="5"
            android:text="Blog content here..." />

    </ScrollView>

</RelativeLayout>

