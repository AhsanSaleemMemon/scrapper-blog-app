<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blogimage"
        android:layout_marginBottom="10dp"

        app:cardCornerRadius="10dp">

        <com.google.android.material.imageview.ShapeableImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/wp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_toRightOf="@id/blogimage"

        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/blogtitle"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:textSize="20dp"
        android:text="Sample title of a blog"
        android:layout_toEndOf="@id/blogimage" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/saved"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blogtitle"
        android:id="@+id/blogtime"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/blogimage"
        android:text="15 Sept,2020"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/dash"
        android:layout_below="@id/blogtitle"
        android:textSize="18sp"
        android:layout_toRightOf="@id/blogtime"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/blogtime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blogtitle"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/dash"
        android:layout_toEndOf="@id/dash"
        android:text="5 min Read"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        />

</RelativeLayout>